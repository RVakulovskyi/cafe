<project xmlns:sf="antlib:com.salesforce" default="sf" basedir=".">
  <target name="Build">
    <echo>Continuous Integration Build</echo>
    <taskdef resource="net/sf/antcontrib/antlib.xml" />
    <property environment="env" />         
     <sf:deploy username="${sf.username}" password="${sf.password}" singlepackage="true" serverurl="${sf.serverurl}" deployRoot="src"   maxPoll="500" pollWaitMillis="5000" deployRoot="../src" testLevel="RunLocalTests" checkOnly="true"/> 
  </target>  
</project>

