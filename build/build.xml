<project name="Svitla scripts" xmlns:sf="antlib:com.salesforce" default="test">
    <path id="ant.additions.classpath">
        <fileset dir="./lib/" includes="*.jar"/>
    </path>
    <taskdef resource="com/salesforce/antlib.xml" uri="antlib:com.salesforce" classpathref="ant.additions.classpath"/>
    <property environment="env"/>
    <target name="test">
        <sf:deploy username="${sf.username}" password="${sf.password}" serverurl="${sf.serverurl}" maxPoll="500" pollWaitMillis="5000" deployRoot="../src" testLevel="RunLocalTests" checkOnly="true" />
    </target>
</project>

